<?xml version="1.0"?>
<ruleset name="Craft Standard">
	<exclude-pattern>test/*</exclude-pattern>

	<description>Augmented PSR2 standard for Craft</description>

	<rule ref="Generic.WhiteSpace.DisallowTabIndent.TabsUsed">
		<severity>0</severity>
	</rule>

	<rule ref="Generic.WhiteSpace.DisallowSpaceIndent.SpacesUsed">
		<severity>5</severity>
	</rule>

	<rule ref="Squiz.Classes.ValidClassName.NotCamelCaps">
		<severity>0</severity>
	</rule>
</ruleset>
